{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/theme/*": [
        "theme/*"
      ],
      "@/layouts/*": [
        "components/layouts/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/store/*": [
        "store/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/abi/*": [
        "artifacts/contracts/*"
      ],
      "@/typesContracts": [
        "types/typechain/index.ts"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
